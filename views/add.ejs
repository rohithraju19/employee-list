    <div class="container-form1">
        <h2 class="text-center mb-4">Add Employee</h2>
        <form id="login-form" action="/add" method="post" class="mx-auto mt-1 mb-5 log" style="max-width: 400px;">
            <div class="mb-3">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required><br>
            </div>
            <div class="mb-3">
                <label for="designation">Designation:</label>
                <input type="text" class="form-control" id="designation" name="designation" required><br>
            </div>
            <div class="mb-3">
                <label for="location">Location:</label>
                <input type="text" class="form-control" id="location" name="location" required><br>

            </div>
            <div class="mb-3">
                <label for="salary">Salary:</label>
                <input type="number" class="form-control" id="salary" name="salary" required><br>

            </div>
            <button type="submit" class="btn btn-primary w-100">Add</button>
        </form>
